# ============================================================================
# ‚òÅÔ∏è AWS CONFIGURATION (REQUIRED for deployment)
# ============================================================================
# AWS account configuration
AWS_REGION="eu-west-3"
AWS_ACCOUNT_ID=""                         # ‚ö†Ô∏è REQUIRED - Your AWS account

# AWS resources configuration  
ECR_REPOSITORY_NAME="__PROJECT_ARTIFACT_ID__"
LAMBDA_FUNCTION_NAME="__PROJECT_NAME__"
LAMBDA_ARCHITECTURE="arm64"
LAMBDA_MEMORY="512"
LAMBDA_TIMEOUT="30"

# ============================================================================
# üèóÔ∏è BUILD AND DEPLOYMENT CONFIGURATION
# ============================================================================
IMAGE_TAG="latest"

# CORS configuration (for Function URL)
CORS_ALLOW_ORIGINS="*"
CORS_ALLOW_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOW_HEADERS="*"
CORS_MAX_AGE="86400"

# ============================================================================
# üîß NATIVE BUILD CONFIGURATION
# ============================================================================
NATIVE_DEBUG_ENABLED="false"
NATIVE_ENABLE_REPORTS="false"
NATIVE_ADDITIONAL_BUILD_ARGS="-H:+UnlockExperimentalVMOptions,-H:+UseG1GC,-H:MaxRAMPercentage=80"

# ============================================================================
# üìä QUARKUS APPLICATION CONFIGURATION
# ============================================================================
# Logging
LOG_LEVEL="INFO"
DEBUG_MODE="false"

# Application information (injected at runtime)
APP_NAME="__PROJECT_NAME__"
APP_VERSION="__PROJECT_VERSION__"

# ============================================================================
